{
  "AllowedHosts": "*",
  "ComputerUseInfrastructureOptions": {
    "ToolsClient": {
      "BaseUrl": "http://localhost:8080",
      "EnableJwtTokenAuth": "false",
      "DefaultAzureCredentialIncludeInteractiveCredentials": "false"
    },
    "AzureAppHttpToolsClientOptions": [
      {
        "SubscriptionId": "<ADD_SUBSCRIPTION_ID_HERE>",
        "ResourceGroupName": "<ADD_RESOURCE_GROUP_NAME_HERE>",
        "ContainerAppName": "<ADD_CONTAINER_APP_HERE>"
      }
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ComputerUseInfrastructureAnthropicOptions": {
    "ApiKey": "<ADD_CLAUDI_API_KEY_HERE>",
    "MaxTokens": 16384,
    "Display": {
      "Width": 1024,
      "Height": 768,
      "DisplayNumber": 1
    }
  }
}
